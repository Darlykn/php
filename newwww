<?php

namespace App\Helpers;

use App\User;
use App\Guest;

function getGreeting($user) {
    if ($user instanceof User) {
        return "Hello " . $user->getName() . "!";
    } elseif ($user instanceof Guest) {
        return "Nice to meet you Guest!";
    }
}

// src/User.php

namespace App;

class User {
    private $name;

    public function __construct($name) {
        $this->name = $name;
    }

    public function getName() {
        return $this->name;
    }
}

// src/Guest.php

namespace App;

class Guest {
    public function getName() {
        return 'Guest';
    }
}





